    <div id="main" class="shell">
        <!-- Sidebar -->
        <div id="sidebar">
            <ul class="categories">
                <li>
                    <h4>Chủ Đề Sách</h4>
                    <ul>
                        @Html.Action("ChuDe","BookStore")

                    </ul>
                </li>
                <li>
                    <h4>Nhà Xuất Bản</h4>   
                    <ul>
                        @Html.Action("NhaXuatBan", "BookStore")
                    </ul>
                </li>
            </ul>
        </div>
        <!-- End Sidebar -->
        <!-- Content -->
        <div id="content">
            <!-- Products -->
            <div class="products">
                @RenderBody()
            </div>
            
            <div class="cl">&nbsp;</div>
        </div>
        <!-- End Content -->
        <div class="cl">&nbsp;</div>
    </div>
    <!-- End Main -->
    <!-- Footer -->
    <div id="footer" class="shell">
        <div class="top">
            <div class="cnt">
                <div class="col store">
                    <h4>Store</h4>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Special Offers</a></li>
                        <li><a href="#">Log In</a></li>
                        <li><a href="#">Account</a></li>
                        <li><a href="#">Basket</a></li>
