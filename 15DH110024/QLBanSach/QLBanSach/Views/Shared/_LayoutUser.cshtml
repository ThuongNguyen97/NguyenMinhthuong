                @Html.Action("XinChao", "NguoiDung")
            </ul>
        </div>
        <!-- End Navigation -->
        <div class="cl">&nbsp;</div>
        <!-- Login-details -->
        <div id="login-details">
            <p>Welcome, <a href="#" id="user"></a></p><p><a href="#" class="cart"><img src="css/images/cart-icon.png" alt="" /></a>Shopping Cart (0) <a href="#" class="sum">$0.00</a></p>
        </div>

        <!-- End Login-details -->
    </div>
    <!-- End Header -->
    <!-- Slider -->
    <div id="slider">
        <div class="shell"   style="background-image: url(~/images/slider-bg.png)">
           
                
                    <div class="image">
                        <img src="~/css/images/books.png" alt="" />
